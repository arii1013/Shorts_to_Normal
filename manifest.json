{
    "manifest_version": 3,
    "name": "Youtube Shorts to Normal",
    "description": "",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "toggle": {
            "suggested_key": "Alt+Q",
            "description": "toggle modes of the shorts and the normal"
        },
        "block": {
            "suggested_key": "Alt+W",
            "description": "never recommend what youre seeing"
        },
        "prev": {
            "suggested_key": "Alt+A",
            "description": "prev shorts contents"
        },
        "next": {
            "suggested_key": "Alt+S",
            "description": "next shorts contents"
        }
    },

    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage"
    ]
}